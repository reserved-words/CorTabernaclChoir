@model CorTabernaclChoir.Common.Models.Home
@using CorTabernaclChoir.Extensions

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.MainText_E, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.MainText_E, htmlAttributes: new { @class = "form-control md", rows = 8, style = "min-width: 100%;" })
                @Html.ValidationMessageFor(model => model.MainText_E, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MainText_W, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
