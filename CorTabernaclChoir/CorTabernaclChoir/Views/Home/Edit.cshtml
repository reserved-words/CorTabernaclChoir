                @Html.EditorFor(model => model.Accompanist, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Accompanist, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.DisplaySaveButton()
                @Html.DisplayCancelButton(Url.Action("Index", "Home"))
            </div>
        </div>
    </div>
}
