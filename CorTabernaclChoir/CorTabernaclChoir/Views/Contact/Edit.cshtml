@model CorTabernaclChoir.Common.Models.Contact
@using CorTabernaclChoir.Helpers

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.MainText_E, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.MainText_E, htmlAttributes: new { @class = "form-control bbcode", rows = 4, style = "min-width: 100%;" })
                @Html.ValidationMessageFor(model => model.MainText_E, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MainText_W, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.MainText_W, htmlAttributes: new { @class = "form-control bbcode", rows = 4, style = "min-width: 100%;" })
                @Html.ValidationMessageFor(model => model.MainText_W, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.DisplaySaveButton()
                @Html.DisplayCancelButton(Url.Action("Index", "Contact"))
            </div>
        </div>
    </div>
}
