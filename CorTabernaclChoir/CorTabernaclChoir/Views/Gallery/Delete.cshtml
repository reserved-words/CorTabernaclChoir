@model CorTabernaclChoir.Common.Models.GalleryImage
@using CorTabernaclChoir.Extensions

<div>

    <h4>Are you sure you want to delete this image?</h4>

    <div class="row">
        <div class="col-xs-12 text-center">
            <img src="@string.Format("../Images/Gallery/{0}.jpg", Model.Id)" style="max-width: 400px;" />
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-2 text-right">
            @Html.LabelFor(model => model.Caption_E)
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Caption_E)
        </div>
    </div>

    <div class="row">
        <div class="col-md-2 text-right">
            @Html.LabelFor(model => model.Caption_W)
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Caption_W)
        </div>
    </div>

    <div class="row">
        <div class="col-md-2 text-right">
            @Html.LabelFor(model => model.Year)
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Year)
        </div>
    </div>
    <br />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.DisplayDeleteConfirmButton()
            @Html.DisplayCancelButton(Url.Action("Index", "Gallery"))
        </div>
    }
</div>
